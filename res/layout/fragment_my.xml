<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/red" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_slightlybigger" />
    </RelativeLayout>
    <!-- <include layout="@layout/view_wide_line" /> -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/updateUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_large"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.library.view.RoundImageView
                    android:id="@+id/avatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="@dimen/margin_large"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_avatar_icon" />

                <TextView
                    android:id="@+id/userNikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
<!--             <include layout="@layout/view_narrow_line" /> -->

            <RelativeLayout
                android:id="@+id/completedOrders"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivcompletedOrders"
                    android:layout_width="34dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/completed_orders_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivcompletedOrders"
                    android:text="@string/completed_orders"
                    android:textColor="@color/text_color_shallow"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <include layout="@layout/view_narrow_line" />

            <RelativeLayout
                android:id="@+id/forReceivingOrders"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivforReceivingOrders"
                    android:layout_width="34dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/for_receiving_orders_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivforReceivingOrders"
                    android:text="@string/for_receiving_orders"
                    android:textColor="@color/text_color_shallow"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <include layout="@layout/view_narrow_line" />

            <RelativeLayout
                android:id="@+id/feedback"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivfeedback"
                    android:layout_width="34dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/feedback_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivfeedback"
                    android:text="@string/feedback"
                    android:textColor="@color/text_color_shallow"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <include layout="@layout/view_narrow_line" />

            <RelativeLayout
                android:id="@+id/aboutUs"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/ivaboutUs"
                    android:layout_width="34dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/about_us_iocn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivaboutUs"
                    android:text="@string/about_us"
                    android:textColor="@color/text_color_shallow"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_nomarl"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/enter_icon" />
            </RelativeLayout>

            <include layout="@layout/view_narrow_line" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>